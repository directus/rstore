{
  "name": "datastore-monorepo",
  "version": "0.8.0",
  "private": true,
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "description": "",
  "author": "",
  "license": "MIT",
  "keywords": [],
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "pnpm run -r --filter \"@rstore/*\" build",
    "dev:prepare": "pnpm run -r --filter \"@rstore/*\" dev:prepare",
    "dev": "pnpm run -r --filter \"@rstore/*\" dev",
    "lint": "eslint --cache .",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:types": "pnpm run --parallel -r test:types",
    "copy-readme": "echo ./packages/* | xargs -n 1 cp README.md",
    "release": "pnpm run copy-readme && pnpm run lint && pnpm run test && pnpm run test:types && pnpm run build && sheep release -b main --force",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "bb": "pnpm run build && pnpm run test:types",
    "postinstall": "simple-git-hooks && pnpm run dev:prepare"
  },
  "devDependencies": {
    "@akryum/sheep": "^0.5.2",
    "@antfu/eslint-config": "^3.12.1",
    "@tailwindcss/vite": "4.0.7",
    "animejs": "^4.2.2",
    "eslint": "^9.17.0",
    "lint-staged": "^15.4.3",
    "npm-run-all2": "^7.0.2",
    "pathe": "^2.0.3",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "4.0.7",
    "typescript": "catalog:",
    "vitepress": "^1.6.3",
    "vitest": "catalog:",
    "vue": "catalog:"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "unrs-resolver",
      "vue-demi",
      "workerd"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  }
}
