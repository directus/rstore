{
  "name": "datastore-monorepo",
  "version": "0.6.13",
  "private": true,
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "description": "",
  "author": "",
  "license": "MIT",
  "keywords": [],
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "pnpm run -r --filter \"@rstore/*\" build",
    "dev": "pnpm run -r --filter \"@rstore/*\" dev",
    "lint": "eslint --cache .",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:types": "pnpm run -r test:types",
    "copy-readme": "echo ./packages/* | xargs -n 1 cp README.md",
    "release": "pnpm run copy-readme && pnpm run lint && pnpm run test && pnpm run test:types && pnpm run build && sheep release -b main --force",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "bb": "pnpm run build && pnpm run test:types",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@akryum/sheep": "^0.5.2",
    "@antfu/eslint-config": "^3.12.1",
    "@tailwindcss/vite": "4.0.7",
    "eslint": "^9.17.0",
    "lint-staged": "^15.4.3",
    "npm-run-all2": "^7.0.2",
    "pathe": "^2.0.3",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "4.0.7",
    "typescript": "^5.7.2",
    "vitepress": "^1.6.3",
    "vitest": "catalog:",
    "vue": "^3.2.29"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "vue-demi",
      "workerd"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npm exec lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  }
}
